
#!/bin/sh

#
# modified from sample: https://prettier.io/docs/en/precommit.html
#
# install dotnet-format: dotnet tool install -g dotnet-format
# copy to .git/hooks/pre-commit and make executable
#

echo "precommit hook running..."
FILES=$(git diff --staged --name-only --diff-filter=ACM "*.cs")
[ -z "$FILES" ] && exit 0

# Format all selected files
echo "$FILES" | cat | xargs | sed -e 's/ /,/g' | xargs dotnet format --include || echo "Nothing to format."

# Add back the modified files to staging
echo "$FILES" | xargs git add

exit 0
